{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/**"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "access": "public",
      "ignoreChanges": ["**/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
    }
  }
}
