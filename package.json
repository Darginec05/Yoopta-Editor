{
  "name": "root",
  "workspaces": [
    "packages/**"
  ],
  "version": "1.1.4",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "rm -rf dist",
    "build:rollup": "rollup -c",
    "build": "rollup -c --environment NODE_ENV:production",
